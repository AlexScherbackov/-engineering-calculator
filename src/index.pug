	- buttons = [ {id: 'save-number', name: 'save-number', text: 'ms', classList: 'calcsoft-form__btn--darc'},              {id: 'change-mat-sign', name: 'change-mat-sign', text: '+/-', classList: 'calcsoft-form__btn--darc'},               {id:'clean-end', name:'clean-end', text: '00->0', classList:'calcsoft-form__btn--darc calcsoft-form__btn--fz-14px'},{id: 'mat-sqrt', name: 'mat-sqrt', text: '&#8730;', classList: 'calcsoft-form__btn--darc'},                         {id: 'mat-pow-2', name: 'mat-pow-2', text: 'x<sup>2</sup>', classList: 'calcsoft-form__btn--darc'},                 {id: 'mat-pow-y', name: 'mat-pow-y', text: 'x<sup>y</sup>', classList: 'calcsoft-form__btn--darc'},                 {id: 'output-from-memory', name: 'output-from-memory', text: 'mr', classList: 'calcsoft-form__btn--darc'},          {id: 'number-seven', name: 'number-seven', text: '7', classList: 'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},                                                                                       {id: 'number-eight', name: 'number-eight', text: '8', classList: 'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},                                                                                       {id: 'number-nine', name: 'number-nine', text:'9', classList:'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},{id: 'division', name: 'division', text: '&#247;', classList: 'calcsoft-form__btn--darc'},                          {id: 'procent', name: 'procent', text: '&#37;', classList: 'calcsoft-form__btn--darc'},                             {id: 'clear-memory', name: 'clear-memory', text: 'mc', classList: 'calcsoft-form__btn--darc'},                      {id: 'number-four', name: 'number-four', text:'4', classList:'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},{id: 'number-five', name: 'number-five', text:'5', classList:'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},{id: 'number-six', name: 'number-six', text:'6', classList:'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},  {id: 'mat-mult', name: 'mat-mult', text: 'x', classList: 'calcsoft-form__btn--darc'},                               {id: 'mat-substr', name: 'mat-substr', text: '-', classList: 'calcsoft-form__btn--darc'},                           {id: 'clear-all', name: 'clear-all', text: 'ac', classList: 'calcsoft-form__btn--light-blue'},                      {id: 'number-one', name: 'number-one', text:'1', classList:'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},  {id: 'number-two', name: 'number-two', text:'2', classList:'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},  {id:'number-three', name:'number-three', text:'3', classList:'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},{id: 'mat-plus', name: 'mat-plus', text: '+', classList: 'calcsoft-form__btn--darc calcsoft-form__btn--2col'},      {id: 'mat-result', name: 'mat-result', text: '=', classList: 'calcsoft-form__btn--darc calcsoft-form__btn--2col'},  {id: 'clear-calc', name: 'clear-calc', text: 'c', classList: 'calcsoft-form__btn--light-blue'},                     {id: 'zero', name: 'zero', text:'0', classList:'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},              {id: 'two-zero', name: 'two-zero', text:'00', classList:'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},     {id: 'dot', name: 'dot', text:'.', classList:'calcsoft-form__btn--gray calcsoft-form__btn--c-blue'},]

block content
	
	div.calcsoft-form.calcsoft
		h2.calcsoft-form__title.calcsoft__title="Математический калькулятор"
		form.calcsoft-form__main.mt-20#matematical-calc
			div.calcsoft-form__wrapper.calcsoft-form__wrapper--flex
				div.calcsoft-form__remember-number#remember-number
				input#calculation-result.matematical__main(type='text' name='calc-input' disabled="disabled")
				div.calcsoft-form__wrapper.calcsoft-form__wrapper--grid.calcsoft-form__wrapper--grid-r6-po-50px.mt-10
					each btn in buttons
						button(id=btn.id name=btn.name class='calcsoft-form__btn '+btn.classList)!=btn.text
					
			